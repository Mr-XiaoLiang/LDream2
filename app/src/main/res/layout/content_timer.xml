<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/timerRoot"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.lollipop.ldream.view.BackgroundView
        android:layout_gravity="center"
        android:id="@+id/backgroundView"
        android:layout_width="0px"
        android:layout_height="0px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"/>

    <TextView
        android:shadowRadius="5"
        android:shadowDy="1"
        android:shadowDx="2"
        android:shadowColor="@android:color/black"
        android:id="@+id/timerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="18:00"
        android:textColor="#AAFFFFFF"
        android:textSize="80sp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <com.google.android.flexbox.FlexboxLayout
        app:layout_constraintTop_toBottomOf="@id/timerView"
        app:layout_constraintLeft_toLeftOf="@id/timerView"
        app:layout_constraintRight_toRightOf="@id/timerView"
        android:id="@+id/notificationGroup"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        app:flexDirection="row"
        app:justifyContent="center"
        app:alignContent="center"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/notificationGroup"
        app:layout_constraintLeft_toLeftOf="@id/timerView"
        app:layout_constraintRight_toRightOf="@id/timerView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:shadowRadius="5"
        android:shadowDy="1"
        android:shadowDx="2"
        android:shadowColor="@android:color/black"
        android:id="@+id/powerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#AAFFFFFF"
        android:textSize="20sp"
        android:text="100%"
        android:typeface="monospace"/>

</androidx.constraintlayout.widget.ConstraintLayout>
